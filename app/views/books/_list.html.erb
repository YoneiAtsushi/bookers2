<h2>User info</h2>

<div><%= image_tag user.get_profile_image(100,100) %></div>

<table class="table">
 <tbody>
   <tr>
    <th>name</th>
    <td><strong><%= user.name %></strong></td>
   </tr>
   <tr>
    <th>introduction</th>
    <td><strong><%= user.introduction %></strong></td>
   </tr>
 </tbody>
</table>
<%= link_to "", edit_user_path(user.id), class: "btn btn-outline-secondary btn-block fa-user-gear" %>
<h1>New book</h1>
<%= form_with model: book do |f| %>
  <h6>Title</h6>
  <%= f.text_field :title %>
  <h6>Opinion</h6>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
