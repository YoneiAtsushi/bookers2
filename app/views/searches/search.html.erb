<h1>Books search for"test"</h1>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
<table class="table">
   <thead>
     <tr>
       <th>Title</th>
       <th>Opinion</th>
     </tr>
   </thead>
<!--検索の対象がuser-->
   <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
 <!--検索の対象がBook -->
 <tbody>
  <% @books.each do |book| %>
   <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
   </tr>
 </tbody>
 <% end %>
 <% end %>
</table>