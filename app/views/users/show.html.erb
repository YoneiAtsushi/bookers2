<div>
  <%= flash[:notice] %>
</div>
<%= render 'books/list', user: @user, book: @book %>

<h1>Books</h1>
<table>
 <tr>
  <th>Title</th>
  <th>Opinion</th>
 </tr>
 <% @books.each do |book| %>
 <tr>
  <td><%= link_to user_path(@user.id) do %>
       <%= image_tag @user.get_profile_image(100,100) %>
      <% end %>
  </td>
  <td><%= link_to book_path(book.id) do %>
       <%= book.title %>
      <% end %>
  </td>
  <td><%= book.body %></td>
  </tr>
      <% end %>
</table>

